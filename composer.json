{
    "name": "lroot/slim-homestead-skeleton",
    "description": "A Slim Framework skeleton application with Laravel Homestead",
    "keywords": ["microframework", "rest", "router", "psr7", "homestead"],
    "homepage": "https://github.com/lroot/slim-homestead-skeleton",
    "license": "MIT",
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "roave/security-advisories": "dev-master",
        "zendframework/zend-debug": "^2.5",
        "zendframework/zend-escaper": "^2.5",
        "vlucas/phpdotenv": "^2.4"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0",
        "laravel/homestead": "^7.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }
}
